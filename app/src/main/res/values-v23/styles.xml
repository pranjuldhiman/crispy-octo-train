<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.TransparentTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Light">    
        <item name="android:windowFrame">@null</item>   
        <item name="android:windowBackground">@android:color/transparent</item>   
        <item name="android:windowIsFloating">true</item>   
        <item name="android:windowContentOverlay">@null</item>    
        <item name="android:windowTitleStyle">@null</item>    
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>  
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>  
        <item name="android:backgroundDimEnabled">true</item>   
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="radio" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">@dimen/dim_14sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:buttonTint">@color/blue</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
