<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dim_90dp"
    android:layout_height="@dimen/dim_90dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cms_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_cms_logo"
                android:layout_width="@dimen/dim_30dp"
                android:layout_height="@dimen/dim_30dp"
                android:src="@drawable/pdf"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_cms_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/dim_5dp"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
