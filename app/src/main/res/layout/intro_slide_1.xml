<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal">

<!--
    android:background="@drawable/slider_two_demoa"
-->


    <ImageView
        android:id="@+id/img_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_marginTop="@dimen/dim_100dp"
        android:layout_gravity="top|center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/slider_a"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_1"
        android:text="@string/sliderone"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dim_200dp"
        android:fontFamily="@font/regular"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:shadowColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        />


