<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".dashboard.MainActivity">


    <LinearLayout
        android:id="@+id/nav_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dim_minus_25dp"
        android:layout_marginEnd="@dimen/dim_minus_25dp"
        android:layout_marginBottom="@dimen/dim_minus_20dp"
        android:background="@drawable/nav_bar_bg"
        android:paddingStart="@dimen/dim_25dp"
        android:paddingEnd="@dimen/dim_25dp"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dim_30dp"
                android:layout_height="@dimen/dim_30dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dim_5dp"
                android:contentDescription=""
                android:src="@drawable/home" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dim_40dp"
                android:layout_height="@dimen/dim_40dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dim_5dp"
                android:contentDescription=""
                android:src="@drawable/assignment" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_photo_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dim_40dp"
                android:layout_height="@dimen/dim_40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dim_5dp"
                android:contentDescription=""
                android:src="@drawable/ic_add_a_photo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dim_40dp"
                android:layout_height="@dimen/dim_40dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dim_5dp"
                android:contentDescription=""
                android:src="@drawable/outline" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dim_40dp"
                android:layout_height="@dimen/dim_40dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dim_5dp"
                android:contentDescription=""
                android:src="@drawable/account" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/parentLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_200dp"
            android:background="@drawable/header_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_16sp"
                android:text="ASK YOUR DOUBT ?" />

            <ImageView
                android:id="@+id/cam_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim_20dp"
                android:src="@drawable/camera_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cam_img"
                android:layout_marginTop="@dimen/dim_10dp"
                android:gravity="center"
                android:textSize="@dimen/dim_12sp"
                android:textColor="@color/white"
                android:text="Upload your doubt for instant solution" />

        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlayout"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/dim_3dp"
            app:cardElevation="@dimen/dim_10dp">
            <LinearLayout
                android:id="@+id/app_selector"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_40dp"
                android:layout_marginTop="@dimen/dim_10dp"
                android:background="#808080"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:src="@drawable/pdf"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="PDF"
                        android:textSize="@dimen/dim_12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:src="@drawable/video"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="VIDEO"
                        android:textSize="@dimen/dim_12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:src="@drawable/whatsapp"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="WHATSAPP"
                        android:textSize="@dimen/dim_12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:src="@drawable/update"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:textSize="@dimen/dim_12sp"
                        android:text="UPDATES" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_selector"
            android:padding="@dimen/dim_10dp">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dim_14sp"
                android:textColor="@color/black"
                android:text="@string/latest_videos"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dim_14sp"
                android:textColor="@android:color/holo_blue_dark"
                android:textAllCaps="true"
                android:text="@string/view_all"
                android:clickable="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contentVP"
            android:layout_width="match_parent"
            android:layout_below="@id/header_layout"
            android:layout_height="@dimen/dim_100dp"/>

        <ImageView
            android:id="@+id/viewPager"
            android:layout_marginLeft="@dimen/dim_10dp"
            android:layout_marginRight="@dimen/dim_10dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/contentVP"
            android:src="@drawable/ad" />

    </RelativeLayout>

</RelativeLayout>
