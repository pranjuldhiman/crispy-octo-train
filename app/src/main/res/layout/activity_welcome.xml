<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dim_40dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layoutDots"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40dp"
            android:gravity="center"
            android:orientation="horizontal" />

            <Button
                android:id="@+id/login_with_mobile"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Login with Mobile Number"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginStart="@dimen/dim_40dp"
                android:layout_marginEnd="@dimen/dim_40dp"
                android:background="@drawable/login_mobile_bg_d"/>

            <Button
                android:id="@+id/login_with_fb"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/dim_40dp"
                android:layout_marginEnd="@dimen/dim_40dp"
                android:drawableLeft="@drawable/ic_facebook"
                android:drawableTint="@color/white"
                android:text="Facebook Login"
                android:layout_marginTop="@dimen/dim_10dp"
                android:visibility="gone"
                android:textColor="#ffffff"
                android:background="@drawable/fb_bgs"/>
        </LinearLayout>

</RelativeLayout>
