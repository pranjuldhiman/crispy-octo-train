<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dim_40dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layoutDots"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_30dp"
            android:gravity="center"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/login_with_mobile"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:padding="@dimen/dim_10dp"
            android:background="@drawable/login_mobile_bg">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btn_text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_with_fb"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:padding="@dimen/dim_10dp"
            android:background="@drawable/fb_bg">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fb_text"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>